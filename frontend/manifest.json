{
    "name": "Snippy",
    "version": "1.0",
    "description": "Select, Copy & Paste",
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "browser_action": {
        "default_icon": "images/camera256.png",
        "default_title": "Take a screen shot!" 
    },
    "icons": {
        "16": "images/camera16.png",
        "32": "images/camera32.png",
        "64": "images/camera64.png",
        "128": "images/camera128.png"
    },
    "permissions": [
        "activeTab"
    ],
    "manifest_version": 2
}